package main;

import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.io.Serializable;
import java.net.Socket;

public class PlayerClient implements Serializable
{

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	public String name;
	int id;
	ScorePad Player_Score;
	
	private class Client
	{
		Socket socket;
		private ObjectInputStream In;
		private ObjectOutputStream Out;
		
		public Client()
		{
			try 
			{
				this.socket = new Socket("localhost",8000);
				this.In = new ObjectInputStream(this.socket.getInputStream());
				this.Out = new ObjectOutputStream(this.socket.getOutputStream());
				
				id = this.In.readInt();
				
				System.out.println("Loginin as : " + name);
				
				
				System.out.println("You are the " + id + " player of the game.");
				
			} 
			catch (IOException e) 
			{
				e.printStackTrace();
			}
			
		}
		
		void send_ScorePad()
		{
			try
			{
				Out.writeObject(Player_Score.getScorePad());
				Out.flush();
			}
			catch (IOException e)
			{
				System.out.println("ScordPad sent fail :");
				e.printStackTrace();
			}
		}
	}

}
